{{!-- login page --}}
<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-12 login-sec">
      <h2 class="text-center">Login Now</h2>
  <form class="login-form" action="/auth/login" method="POST" id="form-container">
    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" type="text"   class="form-control" name="username" placeholder="Your Username">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" type="password"   class="form-control" name="password" placeholder="Your password">
    </div> 
    <div class="form-check">
      {{#if message }}
        <div class="error-message">{{ message }}</div>
      {{/if}}
      <br><br>
      <button class="btn btn-login float-right">Login</button>
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </div>
  </form>

  <div>
    <a href="/auth/slack">log with slack</a>
    <a href="/auth/google">log with google</a>
    {{!-- <a href="https://slack.com/oauth/authorize?scope=identity.basic&client_id=your_client_id"><img src="https://api.slack.com/img/sign_in_with_slack.png" /></a> --}}
  </div>
</section>