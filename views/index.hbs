{{!-- home page before login --}}
{{!-- PPT page 1 --}}
<h3>home page before/after login</h3>


<h1>Welcome to the Foods Project</h1>

  {{#if isConnected}}
    <form action="/" method="post">
      <select name="kind">
        <option value="name">Name</option>
        <option value="cuisine">Cuisine</option>
        <option value="distance">distance</option>
      </select>
      <input type="text" name="content">
      <input type="submit" value="search">
    </form>

  {{/if}}
   <br>
  <div class="foods-wrapper">
  {{#each foods}}
  <div class="food-item">
    <img src="{{this.imgPath}}" alt="">
      <h4>{{this.name}}</h4>
      <h4>{{this.cuisine}}</h4>
      {{!-- <a href="/error">For More Information</a> --}}
      {{#unless ../isConnected}}
      <a href="/error">For More Information</a>
      {{/unless}}
      {{#if ../isConnected}}
      <a href="/foods/{{this._id}}">Details</a>
      <a href="/foods/order/{{this._id}}">I want</a>
      {{/if}}
      
      {{!-- <img src="{{}}" --}}
  </div>
  {{!-- {{else}} --}}
    {{!-- <p>There are no foods yet! :(</p> --}}
  {{/each}}
</div>