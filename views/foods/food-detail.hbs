{{!-- detail food information --}}
<div style="height: 100vh;">
  <div class="container" style="margin-top:10vh;">
    <div class="text-center row"><h3 class="col">{{food.name}}</h3></div>
    <div class="img-con">
      <div class="img-layout">
        <img src="{{food.imgPath}}" style="width:80%;">
      </div>
      <div class="text-img"> 
        <h4>cuisine: {{food.cuisine}}</h4>
        <h4>description: {{food.description}}</h4>
        <h4 id="address1">address :{{user.address1}} &nbsp; {{user.address2}}</h4>
        <h4>PINCODE: {{user.pincode}}</h4>
        <h4 id="region">Region: {{user.region}}</h4>
        <h4 id="country">Country: {{user.country}}</h4>
      </div> 
    </div>
    <div id='map'></div>
    <div id='distance' class='distance-container'></div>
    <div class="mybutton">
      <button class="btn btn-info" style="background-color:#5E4485;border-color:#5E4485;"><a href="/foods/order/{{food.id}}" style="color: white; text-decoration:none; background-color:#5E4485;">Want</a></button>
      <button class="btn btn-info" style="background-color:#5E4485;border-color:#5E4485;"><a href="/" style="color: white; text-decoration:none; background-color:#5E4485">Return</a></button>
    </div>
  </div>
</div>
<script src="/javascripts/main.js"></script>