<div style="height: 100vh;">
  <div class="container" style="margin-top:10vh;">
    <div class="row">
      <h3 class="text-center col">Food order message</h3>
    </div>

    <div class="img-con">
      <div class="img-layout">
        <img src="{{food.imgPath}}"  style="width:80%;" >
      </div>

      <div class="text-img">
        <h4>Name : {{food.name}}</h4>
        <h4>Cuisine: {{food.cuisine}}</h4>
        <h4>Avalibility:{{food.avalibility}}</h4> 
        <h4>Order Person:{{user.username}}</h4> 
        <h4>Order Message: <br>{{message.content}}</h4>
      </div>     
    </div>

  </div>
</div>