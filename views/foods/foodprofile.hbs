{{!-- list all food profile of the user(user who log in) --}}
{{!-- ppt page 7 --}}


{{!-- <div class="foods-wrapper"> --}}
  {{#each foods}}
  {{!-- <div class="food-item style:"margin-top:25px"> --}}
    
    <div class="float-lg-left padding "> 
    <img src="{{this.imgPath}}"  alt="{{this.imgName}}" class="img-fluid img-thumbnail" style="height: 350px; width:350px;">
    <h4 class="text-center">{{this.name}}</h4>
    <h4 class="text-center">{{this.cuisine}}</h4>
    <h4>{{this.availability}}</h4>
    {{!-- <h4>{{this._owner}}</h4> --}}
    {{#if this.status}}
    <h4>No Message</h4>
    {{/if}}

    {{#unless this.status}}
    <div class="text-center details">
    <a href="/profile/message/{{this._id}}">Message</a>
    </div>
    <br>
    {{/unless}}
    
    <div class="text-center details">
    <a href="/profile/edit/{{this._id}}">Edit</a>
    </div> 
    
    <br>
    <div class="text-center details">
    <a href="/profile/delete/{{this._id}}">Delete</a>
    </div>

      

  {{else}}
    <p>There are no foods yet! :(</p>
  {{/each}}
  </div>
</div>
