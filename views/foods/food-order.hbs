{{!-- food order information --}}
<div style="height: 100vh;">
  <div class="container" style="margin-top:10vh;">
    <div class="text-center row"><h3 class="col">{{food.name}}</h3></div>

    <div class="img-con">
      <div class="img-layout">
        <img src="{{food.imgPath}}" style="width:80%;">
      </div>
      <div class="text-img"> 
        <h4>Cuisine: {{food.cuisine}}</h4>
        <h4>Description: {{food.description}}</h4>
        <h4>Availability :{{food.availability}}</h4>
      </div> 
    </div>

    <div class="row message">
      <form action="/foods/order/{{food.id}}" method="post" class="message-form">
        <label style="font-size: 1.5rem;">Message</label><br>
        {{#if message}}
          <p> {{message}} </p>
        {{/if}}
        <textarea type='text' class="form-control"  name="message" value=""></textarea>
        <input  class="btn btn-primary" type="submit" value="Want" style="margin-top:1vh; border-color:#5E4485;background-color:#5E4485">
      </form>
    </div>
  </div>
</div>