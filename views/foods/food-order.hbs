<div style="height: 100vh;">
  <div class="container" style="margin-top:10vh;">
    <div class="text-center row"><h3 class="col">{{food.name}}</h3></div>

    <div class="img-con">
      <div class="img-layout">
        <img src="{{food.imgPath}}" style="width:80%;">
      </div>
      <div class="text-img"> 
        <h4>cuisine: {{food.cuisine}}</h4>
        <h4>description: {{food.description}}</h4>
        <h4>Availability :{{food.availability}}</h4>
